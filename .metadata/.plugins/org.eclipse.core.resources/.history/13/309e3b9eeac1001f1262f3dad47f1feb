    <!-- Adicionando o jQuery e Bootstrap JS para outras funcionalidades -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- JS para animar quando a página carregar e transição de página -->
    <script>
        $(document).ready(function() {
            // Função para aplicar animação ao carregar a página
            function applyPageTransition() {
                $('#page-content').addClass('fade-in');
            }

            // Chama a função para animação ao carregar a página
            applyPageTransition();

            // Intercepta os links de navegação para adicionar animação
            $('.nav-link').on('click', function(event) {
                event.preventDefault(); // Impede o comportamento padrão do clique
                var targetUrl = $(this).attr('href');
                
                // Aplica animação de fade-out antes de carregar o conteúdo novo
                $('#page-content').addClass('fade-out').fadeOut(500, function() {
                    // Carrega o novo conteúdo da página
                    $('#page-content').load(targetUrl, function() {
                        $('#page-content').removeClass('fade-out').fadeIn(1000);
                    });
                });
            });
        });
    </script>
</body>
